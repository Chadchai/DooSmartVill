<!DOCTYPE.html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>DoSmartVill - เบอร์ติดต่อ</title>

  <!-- Custom fonts for this template-->
  <link href="assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Kanit:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

  <!-- Custom styles for this template-->
 <link href="assets/css/sb-admin-2.css" rel="stylesheet">

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('partials/adminheader.ejs') %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">เบอร์โทรติดต่อฉุกเฉิน</h1>
            <a href="#" class="d-none d-sm-inline-block btn btn-lg btn-success shadow-sm" data-toggle="modal" data-target="#addNewContact"><i class="fas fa-plus-square"></i> เพิ่มเบอร์ติดต่อ</a>
          </div>

          <!-- Content Row -->
          <div class="row">
            <% if (contactlist.length > 0) {%>
 
                  <% contactlist.forEach((contact, index) => { %>
            <div class="col-lg-3 ">
                <div class="card shadow mb-4">
                  <div class="card-header bg-success py-3">
                    <div class="row">
                    <div class="col-8 ">
                    <h6 class="m-0 font-weight-bold text-gray-100 text-lg"><%= contact.contact_name %></h6>
                   </div>
                    <div class="col-2 ">
                    <a class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm align-right text-white" onclick="updatecontact('<%= contact.id %>','<%= contact.contact_name %>','<%= contact.contact_no %>')"><i class="fas fa-edit"></i></a>
                   
                </div>
                <div class="col-2 ">
                     <a class="d-none d-sm-inline-block btn btn-sm btn-danger shadow-sm align-right text-white" onclick="deletecontact('<%= contact.id %>','<%= contact.contact_name %>')"><i class="fas fa-trash-alt"></i></a>
                 
                </div>
            </div>
                </div>
                  <div class="card-body text-lg " style="text-align: center;" >
                   
                      <a href="callto:<%= contact.contact_no %>"> <%= contact.contact_no %> </a>
                    </div>
                </div>
              </div>
        
            <% }) %>
          
                
            <% } %>


        <!-- /.container-fluid -->

      </div>



</div>
</div>
<!-- End of Content Wrapper -->


        <!-- Footer -->
        <%- include('partials/adminfooter.ejs') %>
        <!-- End of Footer -->

 
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
         
          <button type="button" style="width:100px" class="btn btn-secondary" data-dismiss="modal">ยกเลิก</button>
        
        </div>
      </div>
   
    </div>
  </div>
  <!-- Delete Modal-->
  <div class="modal fade" id="deletecontact" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form id="addcontact"  action="/deletecontact" method="post" onsubmit="return " >
        <div class="modal-content">
        <div class="modal-header">
          <h5 id="deletelabel" class="modal-title text-primary" id="exampleModalLabel"></h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <input type="hidden" name="contact_id1"  id="contact_id1"  class="form-control"> 
                
        <div class="modal-footer">
            <button type="button" style="width:100px" class="btn btn-secondary" data-dismiss="modal">ยกเลิก</button>
            <button type="submit" style="width:100px" class="btn btn-danger">ลบ</button>
        </div>
      </div>
      </form>

    </div>
  </div>
   <!-- Add New Contact-->
   <div class="modal fade" id="addNewContact" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form id="addcontact"  action="/addcontact" method="post" onsubmit="return " >
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title text-primary" id="exampleModalLabel">ระบุชื่อและเบอร์โทรติดต่อ</h4>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">
          
                <div class="row"> 
                  <div class="col-12"> 
                <h6 class="modal-title text-primary" >ชื่อ: </h6>
                <input type="text" name="contact_name"  id="contact_name"  class="form-control"> 
                </div>
                <div class="col-12"> 
                    <h6 class="modal-title text-primary" >เบอร์โทร: </h6>
                    <input type="text" name="contact_no"  id="contact_no"  class="form-control"> 
                    <input type="hidden" name="village_id"  id="village_id"  class="form-control" value="1"> 
                    </div>
            </div>
           


        </div>
        <div class="modal-footer">
            <button type="submit" style="width:100px" class="btn btn-success">บันทึก</button>
            <button type="button" style="width:100px" class="btn btn-secondary" data-dismiss="modal">ยกเลิก</button>
        
        </div>
      </div>
    </form>
    </div>
  </div>

     <!-- Add New Contact-->
     <div class="modal fade" id="updatecontact" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <form  action="/updatecontact" method="post" onsubmit="return " >
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title text-primary" id="exampleModalLabel">แก้ไขชื่อและเบอร์โทรติดต่อ</h4>
              <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
              </button>
            </div>
            <div class="modal-body">
              
                    <div class="row"> 
                      <div class="col-12"> 
                    <h6 class="modal-title text-primary" >ชื่อ: </h6>
                    <input type="text" name="contact_name1"  id="contact_name1"  class="form-control"> 
                    </div>
                    <div class="col-12"> 
                        <h6 class="modal-title text-primary" >เบอร์โทร: </h6>
                        <input type="text" name="contact_no1"  id="contact_no1"  class="form-control"> 
                        <input type="hidden" name="contact_id"  id="contact_id"  class="form-control"> 
                        </div>
                </div>
               
    
    
            </div>
            <div class="modal-footer">
                <button type="submit" style="width:100px" class="btn btn-success">บันทึก</button>
                <button type="button" style="width:100px" class="btn btn-secondary" data-dismiss="modal">ยกเลิก</button>
             
            </div>
          </div>
        </form>
        </div>
      </div>

  <script>

function updatecontact(contactid,contactname,contactno) {

    document.getElementById("contact_name1").value = contactname;
    document.getElementById("contact_no1").value = contactno;
    document.getElementById("contact_id").value = contactid;

    $("#updatecontact").modal();
};

function deletecontact(contactid,contactname) {

document.getElementById("deletelabel").innerHTML = "ยืนยันที่จะลบเบอร์ " + contactname;
document.getElementById("contact_id1").value = contactid;


$("#deletecontact").modal();
};


  </script>

  <!-- Bootstrap core JavaScript-->
  <script src="assets/vendor/jquery/jquery.min.js"></script>
  <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="assets/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="assets/js/sb-admin-2.min.js"></script>

  <!-- Page level plugins -->
  <script src="assets/vendor/chart.js/Chart.min.js"></script>

  <!-- Page level custom scripts -->
  <script src="assets/js/demo/chart-area-demo.js"></script>
  <script src="assets/js/demo/chart-pie-demo.js"></script>
  <script src="assets/js/demo/chart-bar-demo.js"></script>

</body>

</html>
