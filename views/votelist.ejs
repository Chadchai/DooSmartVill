        <input type="text" name="emp_contact"  id="emp_contact"  class="form-control">  
       
        <h6 class="modal-title text-primary" >Password: </h6>
        <!-- <input type="password" name="emp_pwd" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"  id="emp_pwd1"  class="form-control">  
        -->
        <input type="password" name="emp_pwd1"   id="emp_pwd1"  class="form-control">  
        <h6 class="modal-title text-primary" >ยืนยัน Password </h6>
        <input type="password" name="emp_pwd"  id="emp_pwd2"  class="form-control">  
       
        <div class="modal-footer" >
            
          <button type="submit" style="width:100px" class="btn-sm btn-success">ยืนยัน</button>
      <button type="button" style="width:100px" lass="btn-sm btn-secondary" data-dismiss="modal">ยกเลิก</button>
  
  </div>
</form>    
      </div> 

    </div>
</div>
</div>

  <!-- Logout Modal-->
