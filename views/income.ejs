  document.getElementById("village_id1").value = villageid;
    var today = new Date();
       var dd = today.getDate();
       var mm = today.getMonth() + 1; //January is 0!
       
       var yyyy = today.getFullYear();
       if (dd < 10) {
         dd = '0' + dd;
       } 
       if (mm < 10) {
         mm = '0' + mm;
       } 
       var today = yyyy + '-' + mm + '-' + dd ;
       //console.log(today);
       document.getElementById("income_date").value = today;
       document.getElementById("transfer_date").value = today;
    
   </script>
   <script>
    function validateForm() {
     
      if (document.forms["incomeform"]["receipt_type"].checked== false) {
        alert("กรุณาเลือกประเภทชำระเงิน (เงินสดหรือเงินโอน)");
        return false;
    } 
    if ((document.forms["incomeform"]["receipt_type"].value == "เงินโอน" || document.forms["incomeform"]["receipt_type"].value == "เช็ค" ) && document.forms["incomeform"]["transfer_no"].value == "") {
            alert("กรุณาใส่หมายเลขการโอน");
            document.forms["incomeform"]["transfer_no"].style = "border-color:red;border-width: thick;"
            return false;
        } else {
            document.forms["incomeform"]["transfer_no"].style = "border-color:white;"
        }
    }
